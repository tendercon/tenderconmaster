  var tender_id = $('.tender_id').val();
  var quote_id = $('.quote_id').val();
  $.ajax({
    method: "POST",
    data: {tender_id:tender_id,view:'true',quote_id:quote_id},
    url: "/quote_documents/get_documents"
  }).done(function (data) {
    $('.document_attached_files').html(data);
  });


<% if @quotes.present? %>
  <% @quotes.each do |q| %>
    <div id="quote<%= q.id %>" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false">
      <div class="row">
        <div class="modal-dialog">
          <!-- Modal content-->
          <div class="modal-content col-md-12">
            <div class="modal-header">
              <button type="button" class="close new_rfi_close" data-dismiss="modal">&times;</button>
              <div class="text-center">
                <p class="text-center" style="font-size: 20px">
                  QUOTE - REF# <%= q.ref_no %>
                </p>
              </div>
            </div>
            <br>
            <div class="modal-body">
              <div class="row">
                <div class="col-md-12">
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label>Date</label>
                      </div>
                      <div class="form-group">
                        <label> <%= q.quote_date.present? ? q.quote_date.strftime('%Y.%m.%d') : nil %></label>
                      </div>
                      <div class="form-group">
                        <label>Title</label>
                      </div>
                      <div class="form-group">
                        <label><%= q.title %></label>
                      </div>


                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <% if @sc_user.company_avatar.present? %>
                            <% if File.exist?(@sc_user.company_avatar.image.path(:original)) %>
                                <img src="<%= @sc_user.company_avatar.image.url(:original) %>" class="img-responsive" alt="" class="img-responsive" width="150px" height="70px">
                            <% else %>
                                <img src="../assets/pages/media/profile/profile_user.jpg" class="img-responsive" alt=""  width="150px" height="70px">
                            <% end %>
                        <% else %>
                            <img src="../assets/pages/media/profile/profile_user.jpg" class="img-responsive" alt=""  width="150px" height="70px">
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Description</label>
                  </div>
                  <div class="form-group">
                    <textarea class="form-control quote_desc" rows="5" ><%= q.description %></textarea>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="col-md-6"></div>
                  <div class="col-md-6">
                    <div class="col-md-5"></div>
                    <div class="col-md-7">
                      <div class="form-group">
                        <label>Price: $<%= q.price %></label>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">

                  <%= render :partial => 'quotes/quote_documents', :locals => {:quote_id => q.id} %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>




<div class="trades_lists">
  <div class="form-group has-feedback">
    <% if flash[:error] %>
      <div class="alert alert-danger open-sans-regular" id="users_error">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= @error_alert %>
        <div class="notice" style="font-size: 14px;"><%= flash[:error] %></div>
        <% flash[:error]=nil   %>
      </div>
    <% end %>
    <%- if !flash[:notice].nil? %>
      <div class="alert alert-success open-sans-regular" id="users_error">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <div class="notice" style="font-size: 14px;"><%= flash[:notice] %></div>
        <% flash[:notice]=nil %>
      </div>
    <%- end %>
  </div>

  <div class="table-responsive">
    <div id="toolbar">
      <a href="<%= new_trade_path %>" class="btn btn-default btn-title new_trade" id="new_trade" name="new_trade">Add Trade</a>
    </div>
    <br/>
    <table  class="table table-striped table-bordered"
            data-toggle="table"
            data-toolbar="#toolbar"
            data-search="true"
            data-show-export="true"
            data-minimum-count-columns="2"
            data-pagination="true"
            data-page-list="[10, 25, 50, 100, ALL]">
      <thead>
      <% if @trades.present? %>
        <tr>
          <th>Name</th>
          <th>Action</th>
        </tr>
      <% end %>
      </thead>
      <tbody>
      <% if @trades.present? %>
        <% @trades.each do |trade| %>
          <tr>
            <td style="color: grey;"><%= trade.name %></td>
            <td>
              <a href="<%= edit_trade_path(trade)  %>" class="edit_link" data-original-title="Edit"><button class="btn btn-info" data-toggle="tooltip" data-placement="bottom" title="Edit" style="background-color: #00b8e6;color: white;border-radius: 10px;box-shadow: 0px 1px 39px -9px rgba(0,184,230,1);">Edit</button></a>
              <a href="<%= delete_trades_path(:id => trade.id)  %>" class="edit_link" data-original-title="Edit"><button class="btn btn-info" data-toggle="tooltip" data-placement="bottom" title="Edit" style="background-color: #00b8e6;color: white;border-radius: 10px;box-shadow: 0px 1px 39px -9px rgba(0,184,230,1);">Delete</button></a>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td style="color: grey;">No tender available.</td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


<script>
  $( document ).ready(function() {

  });

</script>

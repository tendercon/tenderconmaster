<style>
  .close_icon{
    -webkit-filter: blur(1px);
    -moz-filter: blur(1px);
    -o-filter: blur(1px);
    -ms-filter: blur(1px);
    filter: blur(1px);
    background-color: gainsboro;
  }
</style>
<div class="row">

  <div class="col-md-12">
    <div class="pull-right close_icon">
      <a href="<%= "/tenders/hc_tender?id=#{@tender.id}&addenda=true&details=true" %>">
        <i class="fa fa-times fa-2x" aria-hidden="true"></i>
      </a>
    </div>
  </div>
  <div class="col-md-12  text-center">
      <!--<a  href="<%#= "/tenders/hc_tender?id=#{@tender.id}&addenda=true&details=true" %>">
        <button class="btn btn-success">
          <i class="fa fa-hand-o-left fa-1x" aria-hidden="true" style="color: green"></i> Back to Addendas
        </button>

      </a>-->

    <div style="height: 30px"></div>
    <div class="col-md-2"></div>

    <div class="col-md-4">
      <a href="#!" class="document_div">
        <div class="col-md-7 document_div_element" style="height: 450px;width: 300px;background-color: darkgrey;border-radius: 5px">
          <div style="height: 180px"></div>
          <div>
            <p class="text-center">
              <i class="fa fa-file fa-5x" aria-hidden="true"></i>
            </p>
          </div>
          <p class="text-center" style="font-size: 18px">
            Upload Documents
          </p>
          <!--<p class="text-center" style="font-size: 12px">
            Upload new or supersede existing files
          </p>-->
          <div class="document_spinner" style="display: none">
            <p class="text-center">
              <img src="assets/ring.gif" width="50px" height=50px">
            </p>
          </div>
        </div>
      </a>
    </div>

    <div class="col-md-4">
      <a href="#!" class="detail_div">
        <div class="col-md-7 detail_div_element" style="height: 450px;width: 300px;background-color: darkgrey;border-radius: 5px">
          <div style="height: 180px"></div>
          <div>
            <p class="text-center">
              <i class="fa fa-info-circle fa-5x" aria-hidden="true"></i>
            </p>
          </div>
          <p class="text-center" style="font-size: 18px">
            Update Tender Details
          </p>
          <!--<p class="text-center" style="font-size: 12px">
            Revise Tender dates and status.
          </p>-->

          <div class="detail_spinner" style="display: none">
            <p class="text-center">
              <img src="assets/ring.gif" width="50px" height=50px">
            </p>
          </div>
        </div>
      </a>
    </div>
  </div>
</div>
<div class="row" >



    <div class="col-md-4"></div>
</div>
<input type="hidden" class="tender_id" value="<%= @tender.id %>">
<script>

  $(document).ready(function(){
    var tender_id = $('.tender_id').val();
    $('.document_div').click(function(){
      $('.document_spinner').show();
      $('.detail_spinner').hide();
      window.location.href = '/addendas/new?id='+tender_id+"&type=documents&details=true";
    });

    $('.detail_div').click(function(){
      $('.document_spinner').hide();
      $('.detail_spinner').show();
      window.location.href = '/addendas/new?id='+tender_id+"&type=details&details=true";;
    });

    $(".document_div_element").hover(function(){
      $(this).css("background-color", "#B0C0E0");
    }, function(){
      $(this).css("background-color", "darkgrey");
    });

    $(".detail_div_element").hover(function(){
      $(this).css("background-color", "#B0C0E0");
    }, function(){
      $(this).css("background-color", "darkgrey");
    });
  });
</script>


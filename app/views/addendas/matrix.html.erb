      var tender_id = $('.tender_id').val();
      var vals = []
      $('input[type="checkbox"]').each(function() {
        if($(this).is(':checked')){
          if($(this).val() != 'on'){
            vals.push($(this).val());
          }
        }
      });
      console.log("vals:------------>"+vals);
      if(search.length > 1){
        $.ajax({
          method: "POST",
          data : {search:search,tender_id:tender_id,vals:vals},

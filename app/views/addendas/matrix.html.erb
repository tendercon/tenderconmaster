<script>
  $(document).ready(function(){
    var last_array = [];
    var session_array = []
    $('.per_field').change(function(){
      var id = $(this).attr('title');
      console.log("id-------->"+id)
      if($(this).is(':checked')){
        $('input:checkbox[id="'+id+'"]').click();
        $('input:checkbox[id="'+id+'"]').prop("checked",true);
      }else{
        $('input:checkbox[id="'+id+'"]').click();
        $('input:checkbox[id="'+id+'"]').prop("checked",false);
      }
    });



    $('input[name *="package"]').change(function(){
      session_array.push($(this).attr('alt'));
    });

    $('.trade_doc').focusin(function(){
      $(this).prop('checked',true);

    });

    $('.directory').click(function () {
      var dir = $(this).attr('id');
      $('.'+dir).each(function () {
        $(this).toggle();
      })
    });

    $('.package_trade').change(function(){
      var id = $(this).attr('id');
      var check = $(this).is(':checked');

      if(check){
        $('.'+id).each(function () {
          $(this).click();
          $(this).prop('checked', true);
          session_array.push($(this).attr('alt'));
        })
      }else{
        $('.'+id).each(function () {
          $(this).click();
          $(this).prop('checked', false);
          session_array.push($(this).attr('alt'));
        })
      }
    });

    $('.category').click(function(){
      var id = $(this).attr('id');
      var tender_id = $('.tender_id').val();
      var vals = []
      $('input[type="checkbox"]').each(function() {
        if($(this).is(':checked')){
          if($(this).val() != 'on'){
            vals.push($(this).val());
          }
        }
      });

      $.ajax({
        method: "POST",
        data : {id:id,tender_id:tender_id,vals:vals},
        url: "/tenders/filter_by_categories"
      }).done(function (data) {
        //$('#selectable').html('');
        $('.matrix').html(data);
      });


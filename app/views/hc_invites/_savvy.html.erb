<div class="admin-form">
  <div class="row">
    
    <div class="col-md-3">
      <% if params[:controller] == 'hc_invites' %>
        <div class="section">
          <input type="hidden" class="tender_id" value="<%= @tender.present? ? @tender.id : nil%>">
          <label class="field select">
            <select class="bs-select form-control trades">
              <% if @tender.present? %>
                <% if @all_trades.present? %>
                  <option value="0">Filter by trade/s</option>
                  <% @all_trades.each do |t| %>
                    <% if @trade_id.present? %>
                      <% if @trade_id.to_i == t.id.to_i %>
                          <option value="<%= t.id %>" selected><%= get_trade_name t %></option>
                      <% else %>
                          <option value="<%= t.id %>"><%= get_trade_name t %></option>
                      <% end %>
                    <% else %>
                        <option value="<%= t.id %>"><%= get_trade_name t %></option>
                    <% end %>
                  <% end %>
                <% end %>
            <% else %>
                <% if @trades.present? %>
                  <option value="0">All Trades</option>
                  <% @trades.each do |t| %>
                    <% if @trade_id.present? %>
                      <% if @trade_id.to_i == t.id.to_i %>
                          <option value="<%= t.id %>" selected><%= get_trade_name t %></option>
                      <% else %>
                          <option value="<%= t.id %>"><%= get_trade_name t %></option>
                      <% end %>
                    <% else %>
                        <option value="<%= t.id %>"><%= get_trade_name t %></option>
                    <% end %>

                  <% end %>
                <% end %>
              <% end %>

            </select>
            <i class="arrow"></i>
          </label>
        </div>
      <% end %>
    </div>
    <div class="col-md-6">

    </div>
  </div>
</div>
<div class="notif" style="display: none">
  <div class="alert alert-success open-sans-regular">
    <button type="button" class="close" data-dismiss="alert"></button>
    <div class="notice" style="font-size: 14px;">Email successfully re-sent.</div>
  </div>
</div>
<div class="table-responsive">
  <table class="table " id="new_quote_table">
    <thead>
   
    <!-- <tr style="background-color: #093bad ;color: white;"> -->
    <tr style="background-color: #2C3E50;color: white;">
      <th>
        <h4 style="font-family: Gotham">
          COMPANY
        </h4>
      </th>
      <th>
        <h4 style="font-family: Gotham">
           NAME
        </h4>
      </th>

      <th>
        <h4 style="font-family: Gotham">
          WORK EMAIL
        </h4>
      </th>
      <th>
        <h4 style="font-family: Gotham">
          PRIMARY TRADE
        </h4>
      </th>
      <% unless @tender.present? %>
          <!--<th class="text-center">Status</th>-->
          <th class="text-center"></th>
      <% end %>
      <% if @tender.present? %>
          <th class="text-center" style="display: none"><input type="checkbox" class="hc_invites_list_master" checked> Invite</th>
          <th>
            <h4 style="font-family: Gotham">
              QUOTING ON
            </h4>
          </th>
      <% end %>
    </tr>
    </thead>
    <tbody class="searchable">
    <% if @hc_invites.present? %>
        <% @hc_invites.each_with_index do |savvy,index| %>
            <% if savvy.email.present? %>
                <tr>
                  <% if @tender.present? %>
                      <td class="savvy_company_<%= savvy.id %>" style="vertical-align: middle"><%= savvy.company %></td>
                  <% else %>
                      <td style="vertical-align: middle"><strong><%= savvy.company %></strong></td>


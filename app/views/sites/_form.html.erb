          <% if @save_site.page_type == "builder" %>
            <%= f.select :page_type, [["Subcontractor", "subcontractor"]], {}, {class: "form-control"} %>
          <% elsif @save_site.page_type == "subcontractor" %>
            <%= f.select :page_type, [["Builder", "builder"]], {}, {class: "form-control"} %>
          <% end %>
        <% else %>
            <%= f.select :page_type, [["Builder", "builder"], ["Subcontractor", "subcontractor"]], {}, {class: "form-control"} %>
        <% end %>

      </p>
    <% end %>


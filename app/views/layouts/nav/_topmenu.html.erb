<div class="top-menu">
  <% if @user.free_plan?  %>
    <a href="/users/profile?id=97&subscription=true" class="btn green btn-outline sbold" style="margin-top: 5px">
      UPGRADE NOW
    </a>
  <% end %>
  <ul class="nav navbar-nav pull-right">
    <li class="dropdown dropdown-extended dropdown-notification" id="header_notification_bar">
      <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
        <i class="icon-bell"></i>
        <span class="badge badge-default" style="background-color: red"> <%= (@quote_notifs.present? ? @quote_notifs.size : 0) + + (@rfi_notifs.present? ? @rfi_notifs.size : 0) %> </span>
      </a>
      <ul class="dropdown-menu">
        <li class="external">
          <h3>
            <span class="bold"><%= (@quote_notifs.present? ? @quote_notifs.size : 0) + (@rfi_notifs.present? ? @rfi_notifs.size : 0) %> pending</span> notifications</h3>
          <a href="page_user_profile_1.html">view all</a>
        </li>
        <li>
          <ul class="dropdown-menu-list scroller" style="height: 250px;" data-handle-color="#637283">
            <% if @quote_notifs.present? %>
              <% @quote_notifs.each do |q| %>
                <li>

                  <a href="<%= q.message.include?("deleted") ? "/tenders/hc_tender?id=#{q.tender_id}&quote=true&notification=#{q.id}" : view_quotes_path(:ref_no => (q.quote.present? ? q.quote.ref_no : nil),:tender_id => (q.quote.present? ? q.quote.tender_id : nil), :notification => q.id) %>">
                    <label class="time"><%= time_ago_in_words(q.created_at) %></label>
                    <span class="details">
                      <span class="label label-sm label-icon label-success">
                          <i class="fa fa-plus"></i> <%= q.message %>
                      </span>

                    </span>
                  </a>
                </li>
              <% end %>
            <% end %>

            <% if @rfi_notifs.present? %>
              <% @rfi_notifs.each do |r| %>
                    <li>

                      <a href="<%= r.message.include?("left") ? "/rfis/comments?id=#{r.rfi_id}&tender_id=#{r.tender_id}&notification=#{r.id}"  : session[:role].include?("Head") ?  "/tenders/hc_tender?id=#{r.tender_id}&rfi=true&notification=#{r.id}" : "/tenders/sc_tender?id=#{r.tender_id}&rfi=true&notification=#{r.id}"  %>">
                        <label class="time"><%= time_ago_in_words(r.created_at) %></label>
                        <span class="details">
                          <span class="label label-sm label-icon label-success">
                              <i class="fa fa-plus"></i> <%= r.message %>
                          </span>
                        </span>
                      </a>
                    </li>
              <% end %>
            <% end %>
          </ul>
        </li>
      </ul>
    </li>
    <!-- END NOTIFICATION DROPDOWN -->
    <!-- BEGIN INBOX DROPDOWN -->
    <!-- DOC: Apply "dropdown-dark" class after below "dropdown-extended" to change the dropdown styte -->

    <!-- END INBOX DROPDOWN -->
    <!-- BEGIN TODO DROPDOWN -->
    <!-- DOC: Apply "dropdown-dark" class after below "dropdown-extended" to change the dropdown styte -->

    <!-- END TODO DROPDOWN -->
    <!-- BEGIN USER LOGIN DROPDOWN -->
    <!-- DOC: Apply "dropdown-dark" class after below "dropdown-extended" to change the dropdown styte -->
    <li class="dropdown dropdown-user">
      <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
        <% if @user.avatar.present? %>
            <% if File.exist?(@user.avatar.image.path(:original)) %>
                <img src="<%= @user.avatar.image.url(:original) %>" class="img-circle" alt="" style="width: 35px !important; height: 30px !important;">
            <% else %>
                <img src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" class="img-circle" alt="">
            <% end %>
        <% else %>
            <img src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" class="img-circle" alt="">
        <% end %>
        <span class="username username-hide-on-mobile"> <%= @user.first_name %> </span>
        <i class="fa fa-angle-down"></i>
      </a>
      <ul class="dropdown-menu dropdown-menu-default">
        <li>
          <a href="<%= profile_users_path(:id => session[:user_logged_id]) %>">
            <i class="icon-user"></i> My Profile </a>
        </li>
        <li>
          <a href="<%= company_profile_users_path(:id => session[:user_logged_id]) %>">
            <i class="icon-user"></i> My Company </a>
        </li>
        <li class="divider"> </li>
        <li>
          <a href="page_user_lock_1.html">
            <i class="icon-lock locked"></i> Lock Screen </a>
        </li>
        <li>
          <a href="<%= logout_users_path(:status => 'normal') %>">
            <i class="icon-key"></i> Log Out </a>
        </li>
      </ul>
    </li>
    <!-- END USER LOGIN DROPDOWN -->

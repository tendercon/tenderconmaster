<body class="<%= params[:action] == 'tendercon_steps' ? '': 'login' %>">

<!-- BEGIN LOGO -->
<div class="logo">
  <a href="#!">
    <!--<img src="../vendors/pages/img/logo-big.png" alt="" />-->
  </a>
</div>
<!-- END LOGO -->
<!-- BEGIN LOGIN -->
<% if params[:action] == 'login'  %>
  <div class="content">
    <!-- BEGIN LOGIN FORM -->
    <%= form_tag(authenticate_users_path, {  :name=> "login",:class=>'form-signin' } )  do %>
        <div class="text-center">
          <img src="/img/logos/TENDERCONABOVELOGO.png" width="350px">
        </div>
        <div class="alert alert-danger display-hide">
          <button class="close" data-close="alert"></button>
          <span> Enter any username and password. </span>
        </div>
        <input type="hidden" name="tender" value="<%= params[:tender].present? ? params[:tender] : nil %>">
        <div class="form-group">
          <label class="control-label visible-ie8 visible-ie9">Username</label>
          <input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="Email" name="email"  /> </div>
        <div class="form-group">
          <label class="control-label visible-ie8 visible-ie9">Password</label>
          <input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password" /> </div>
        <div class="form-actions">
          <button type="submit" class="btn green uppercase">Login</button>
          <!--<label class="rememberme check"><input type="checkbox" name="remember" value="1" />Remember </label>-->
          <a href="<%= forgot_password_users_path %>" id="forget-password" class="forget-password">Forgot Password?</a>
        </div>

        <div class="create-account">
          <p>
            <!--/users/register-->
            <a href="<%= register1_users_path %>" id="register-btn" class="uppercase">Create an account</a>
            <!--<a href="/users/register" id="register-btn" class="uppercase">Create an account</a>-->
          </p>
        </div>
    <% end %>
    <!-- END LOGIN FORM -->

  </div>

<% else %>
    <%= puts params[:action] %>
  <% if params[:action] == 'register' || params[:action] == 'registration' || params[:action] == 'create_user' || params[:action] == 'user_company_exist' ||  params[:action] == 'steps_completed' || params[:action] == 'account_taken' || params[:action] == 'forgot_password' || params[:action] == 'validation_complete' || params[:action] == 'reset_password' || params[:action] == 'password_changed' || params[:action] == 'token_expired' || params[:action] == 'update_password' %>

    <div class="content">
      <%= yield %>
    </div>
  <% else %>
    <div class="row">
      <%= yield %>
    </div>
  <% end %>
<% end %>
<% if params[:action] == 'tendercon_steps' %>
    <div style="height: 10px"></div>
    <div class="copyright text-center"> 2017 © Tendercon </div>
<% else %>
    <div class="copyright"> 2017 © Tendercon </div>
<% end %>

<body class=" login">
<!-- BEGIN : LOGIN PAGE 5-1 -->
<div class="user-login-5">
  <div class="row bs-reset">
    <div class="col-md-4 bs-reset" style="background-color: #364150">
      <div style="height: 200px"></div>
      <div class="text-center">
        <h3 style="color: #ffffff">
          <strong>TENDERCON PROFESSIONAL EDITION</strong>
        </h3>
        <div style="height: 20px"></div>
        <p style="color: #ffffff">
          THE CONSTRUCTION TENDERING PLATFORM TO UNLOCK EXCLUSIVE TENDERING OPPORTUNITIES
        </p>
      </div>
      <div style="height: 400px"></div>
    </div>
    <div class="col-md-1 login-container bs-reset"></div>
    <div class="col-md-7 login-container bs-reset">
      <div style="height: 10px"></div>
      <div class="row">

        <div class="col-xs-6 col-sm-8 col-lg-10 text-right">
          <h3>Don't have an account?</h3>
        </div>
        <div class="col-xs-6 col-sm-4 col-lg-2" style="margin-top: 5px">
          <a href="/users/register">
            <button class="btn " type="button" style="background-color: #ffffff;border-color: #D4D9E2; border-radius: 8px !important;width: 180px !important;height: 45px !important;margin-right: -15px;">
              <h4 style="color: #000000;margin-top: 5px">GET STARTED</h4>
            </button>
          </a>
        </div>
      </div>

      <div class="login-content">
        <h1 style="font-size: 32px">Sign into Tendercon</h1>
        <h3 style="font-size: 24px"> Enter your details below </h3>
        <div style="height: 50px"></div>
        <%= form_tag(authenticate_users_path, {  :name=> "login",:class=>'form-signin' } )  do %>
          <input type="hidden" name="tender" value="<%= params[:tender].present? ? params[:tender] : nil %>">
          <div class="alert alert-danger display-hide">
            <button class="close" data-close="alert"></button>
            <span>Enter any username and password. </span>
          </div>
          <div class="row">
            <div class="col-xs-6">
              <div class="form-group form-md-line-input">
                <input type="text" class="form-control" id="form_control_1" placeholder="Email Address" name="email"  required>
              </div>
            </div>
            <div class="col-xs-6">
              <div class="form-group form-md-line-input">
                <input type="password" class="form-control" id="form_control_1" placeholder="Password" name="password"  required>
              </div>
            </div>
          </div>
          <div style="height: 30px"></div>
          <div class="row">
            <div class="text-center">
              <div class="forgot-password">
                <a href="<%= forgot_password_users_path %>" id="forget-password" class="forget-password" style="text-decoration:none;color: inherit;">
                  <h3>Forgot Password?</h3>
                </a>
              </div>
              <div style="height: 10px"></div>
              <button class="btn " type="submit" style="background-color: #72BB53;border-radius: 8px !important;width: 235px !important;height: 65px !important;margin-right: -15px;">
                <h4 style="color: #ffffff"><strong>LOGIN</strong></h4>
              </button>
            </div>
          </div>
        <% end %>
      </div>
      <div class="login-footer">
        <div class="row bs-reset">

        </div>
      </div>
    </div>
  </div>
</div>
<!-- END : LOGIN PAGE 5-1 -->

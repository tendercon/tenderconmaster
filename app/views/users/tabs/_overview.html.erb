<div style="height: 30px"></div>
<div class="profile-sidebar">
  <!-- PORTLET MAIN -->
  <div class="portlet light profile-sidebar-portlet ">
    <!-- SIDEBAR USERPIC -->
    <div class="profile-userpic">
      <% if @user.avatar.present? %>
          <img src="<%= @user.avatar.image.url(:original) %>" class="img-responsive" alt="">
      <% else %>
          <img src="../assets/pages/media/profile/profile_user.jpg" class="img-responsive" alt="">
      <% end %>
    </div>

    <div class="profile-usertitle">
      <div class="profile-usertitle-name"> <%= "#{@user.first_name} #{@user.last_name}" %> </div>
      <div class="profile-usertitle-job"> <%= "#{ get_postion @user.position}" %>  </div>
    </div>
    <!-- END SIDEBAR USER TITLE -->
    <!-- SIDEBAR BUTTONS -->
    <div class="profile-userbuttons">

    </div>
    <!-- END SIDEBAR BUTTONS -->
    <!-- SIDEBAR MENU -->
    <div class="profile-usermenu">

    </div>
    <!-- END MENU -->
  </div>
  <!-- END PORTLET MAIN -->
  <!-- PORTLET MAIN -->
  <div class="portlet light ">
    <!-- STAT -->
    <div class="row list-separated profile-stat">

    </div>
    <!-- END STAT -->
    <div>

    </div>
  </div>
  <!-- END PORTLET MAIN -->
</div>
<!-- END BEGIN PROFILE SIDEBAR -->
<!-- BEGIN PROFILE CONTENT -->
<div class="profile-content">
  <div class="row">
    <div class="col-md-12">
      <div class="portlet light ">
        <div class="portlet-title tabbable-line">
          <div class="caption caption-md">
            <i class="icon-globe theme-font hide"></i>
            <span class="caption-subject font-blue-madison bold uppercase">Profile Account</span>
          </div>

        </div>
        <div class="portlet-body">
          <div class="tab-content">
            <table class="table table-bordered">
              <thead>
              <tr>
                <td colspan="2">Details</td>
              </tr>
              </thead>
              <tbody>
              <tr>
                <td>Full Name</td>
                <td><%= "#{@user.first_name} #{@user.last_name}" %></td>
              </tr>
              <tr>
                <td>Position</td>
                <td><%= "#{get_postion @user.position}" %></td>
              </tr>
              <tr>
                <td>Company</td>
                <td><%= "#{@user.company}" %></td>
              </tr>
              <tr>
                <td>About</td>
                <td><%= "#{@user.user_info.present? ? @user.user_info.about_me.html_safe : nil}" %></td>
              </tr>
              <tr>
                <td colspan="2">Contact</td>
              </tr>
              <tr>
                <td>Email</td>
                <td><%= "#{@user.email}" %></td>
              </tr>
              <tr>
                <td>Mobile</td>
                <td><%= "#{@user.mobile_number}" %></td>
              </tr>
              <tr>
                <td>Linkedin</td>
                <td><%="#{@user.user_info.present? ? @user.user_info.linkedin : nil}" %></td>
              </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
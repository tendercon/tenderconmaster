<form role="form" action="#">
  <div class="form-group">
    <h4 class="profile-desc-title">First Name</h4>
    <span class="profile-desc-text"> <%= "#{@user.first_name}" %> </span>
  </div>
  <div class="form-group">
    <h4 class="profile-desc-title">Last Name</h4>
    <span class="profile-desc-text"> <%= "#{@user.last_name}" %> </span>
  </div>
  <div class="form-group">
    <h4 class="profile-desc-title">Email</h4>
    <span class="profile-desc-text"> <%= "#{@user.email}" %> </span>
  </div>
  <div class="form-group">
    <h4 class="profile-desc-title">Company</h4>
    <span class="profile-desc-text"> <%= "#{@user.company}" %> </span>
  </div>
  <div class="form-group">
    <h4 class="profile-desc-title">Address</h4>
    <span class="profile-desc-text"> <%= "#{@user.address.present? ? @user.address.location : nil}" %> </span>
  </div>

</form>
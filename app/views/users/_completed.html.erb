<table  class="table table-striped table-bordered"
        data-toggle="table"
        data-toolbar="#toolbar"
        data-search="true"
        data-show-export="true"
        data-minimum-count-columns="2"
        data-pagination="true"
        data-page-list="[10, 25, 50, 100, ALL]">
  <thead>
  <% if @users.present? %>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>ABN</th>
      <th>Action</th>
    </tr>
  <% end %>
  </thead>
  <tbody>
  <% if @users.present? %>
    <% @users.each do |user| %>
      <tr>
        <td style="color: grey;"><%= user.first_name %></td>
        <td style="color: grey;"><%= user.last_name %></td>
        <td style="color: grey;"><%= user.abn %></td>
        <td>
          <a href="#!" class="delete_link" data-original-title="Delete" id="<%= user.id %>"><button class="btn btn-info" data-toggle="tooltip" data-placement="bottom" title="Edit" style="background-color: #00b8e6;color: white;border-radius: 10px;box-shadow: 0px 1px 39px -9px rgba(0,184,230,1);">Delete</button></a>
          <a href="#!" class="suspend_link" data-original-title="Delete" id="<%= user.id %>"><button class="btn btn-info" data-toggle="tooltip" data-placement="bottom" title="Edit" style="background-color: #00b8e6;color: white;border-radius: 10px;box-shadow: 0px 1px 39px -9px rgba(0,184,230,1);">Suspend</button></a>
        </td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td style="color: grey;">No tender available.</td>
    </tr>
  <% end %>
  </tbody>
</table>

<script>
  $('.delete_link').click(function(){
    var id = $(this).attr('id');
    var type = $("#user_type").val();
    $.ajax({
      method: "POST",
      data: {type: type,id:id},
      url: "/users/delete_user"
    }).done(function (data) {
      $('.users').html(data);
    });
  });

  $('.suspend_link').click(function(){
    var id = $(this).attr('id');
    var type = $("#user_type").val();
    $.ajax({
      method: "POST",
      data: {type: type,id:id},
      url: "/users/suspend_user"
    }).done(function (data) {
      $('.users').html(data);
    });
  });
</script>
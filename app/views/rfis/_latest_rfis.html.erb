<div class="row">
  <% if session[:role] == 'Sub Contractor' || session[:role] == 'Team Member' %>
    <a href="#!" class="new_rfi">
      <button class="btn btn-info">Create New RFI</button>
    </a>
  <% end %>
  <% if session[:role] == 'Head Contractor' %>

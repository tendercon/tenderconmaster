      </div>

          <%#= select_tag "trade",content_tag(:option,'Sort By',:value=>'')+content_tag(:option,'All',:value=>'all')+options_from_collection_for_select(@trades, 'id','name'),{:class=> 'form-control sort_trade'} %>


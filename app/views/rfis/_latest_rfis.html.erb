      <div class="row">
         <div class="col-md-6">
           <label>Sort By:</label>
           <div class="form-group">
             <select class="form-control trade_option">
               <% if @trades.present? %>
                   <option value="all">All</option>
                   <% @trades.each do |v| %>
                       <option value="<%= v.id %>"><%= v.name %></option>

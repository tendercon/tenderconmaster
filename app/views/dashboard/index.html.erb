<script>
  $(document).ready(function(){
    $('.invited').click(function(){
      document.getElementById("sub_tender_link").style.color = "red"
      document.getElementById("sub_tender_link").style.background = "black"

      setTimeout(function() {

        document.getElementById("sub_tender_link").style.color = ""
        document.getElementById("sub_tender_link").style.background = ""
      }, 5000);

    })

    $('.post_tender').click(function(){
      document.getElementById("post_tender_link").style.color = "red"
      document.getElementById("post_tender_link").style.background = "black"

      setTimeout(function() {

        document.getElementById("post_tender_link").style.color = ""
        document.getElementById("post_tender_link").style.background = ""
      }, 5000);

    })

    $('.manage_tender').click(function(){
      document.getElementById("my_tender_link").style.color = "red"
      document.getElementById("my_tender_link").style.background = "black"

      setTimeout(function() {

        document.getElementById("my_tender_link").style.color = ""
        document.getElementById("my_tender_link").style.background = ""
      }, 5000);

    })

    $('.remove').click(function(){

      $.ajax({
        method: "POST",
        data: {div:'dashboard'},
        url: "/users/dashboard_user_div"
      }).done(function (data) {
        $('.guidelines').hide();
        $('.four_divs').show();
      });
    })

    <% if @user.div_status == true %>
      $('.guidelines').hide();
      $('.four_divs').show();
    <% else %>
      $('.guidelines').show();
      $('.four_divs').hide();
    <% end %>

    <% if session[:role] == 'Sub Contractor' %>
      $('#btncollapzion').Collapzion({
        _child_attribute:[
            {
              'label':'VIEW INVITED TENDERS',
              'url':'/tenders/invited_tender',
              'icon': "<i class='fa fa-envelope fa-2x'></i>"
            },
            {
              'label':'VIEW OPEN TENDERS',
              'url':'/tenders/open_tender',
              'icon': '<i class="fa fa-briefcase fa-2x"></i>'
            },
            {
              'label':'MANAGE TENDERS',
              'url':'/tenders/my_tender?subcontractor=true',
              'icon': '<i class="fa fa-folder-open fa-2x"></i>'
            },
            {
              'label':'EDIT MY PROFILE',
              'url':'/users/profile?id=<%= @user.id %>&edit=true',
              'icon': '<i class="fa fa-user fa-2x"></i>'
            },
            {
              'label':'EDIT COMPANY PROFILE',
              'url':'/users/company_profile?id=<%= @user.id %>&company_avatar=true',
              'icon': '<i class="fa fa-tasks fa-2x"></i>'
            }
        ],
            _main_btn_color:'#4285f4;',
            _child_btn_color:'#f4645f;',
        
      });
    <% else %>
     
      $('#btncollapzion').Collapzion({
        _child_attribute:[
            {
              'label':'PUBLISH TENDER',
              'url':'/tenders/new_tender?info=true&builder=true',
              'icon': "<i class='fa fa-clipboard fa-2x'></i>"
            },
            {
              'label':'ADD SUBCONTRACTOR',
              'url':'/hc_invites?builder=true',
              'icon': '<i class="fa fa-users fa-2x"></i>'
            },
            {
              'label':'MANAGE TENDERS',
              'url':'/tenders/my_tender?builders=true',
              'icon': '<i class="fa fa-folder-open fa-2x"></i>'
            },
            {
              'label':'EDIT MY PROFILE',
              'url':'/users/profile?id=<%= @user.id %>&edit=true',
              'icon': '<i class="fa fa-user fa-2x"></i>'
            },
            {
              'label':'EDIT COMPANY PROFILE',
              'url':'/users/company_profile?id=<%= @user.id %>&company_avatar=true',
              'icon': '<i class="fa fa-tasks fa-2x"></i>'
            }
        ],
            _main_btn_color:'#4285f4;',
            _child_btn_color:'#f4645f;',
        
      });
    <% end %>
  });

</script>


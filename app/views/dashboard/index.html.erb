<% if session[:role] == 'Head Contractor' %>
    <div class="row guidelines" style="height: 1600px">
      <div class="col-md-12" style="background-color: #2C3E50;color: white; height: 400px">
        <div class="text-center">
          <div class="pull-right">
            <div class="top-menu">
              <ul class="nav navbar-nav pull-right">
                <li class="dropdown dropdown-user">
                  <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">

                    <button type="button" class="btn green btn-sm btn-outline dropdown-toggle" data-toggle="dropdown"> Actions
                      <i class="fa fa-angle-down"></i>
                    </button>
                  </a>
                  <ul class="dropdown-menu pull-right" role="menu">
                    <li>
                      <a href="#!" class="remove">Remove</a>
                    </li>
                  </ul>
                </li>

              </ul>
            </div>
          </div>
          <h3>Hello <%= @user.first_name %>!</h3>
          <label>Inviting Substractors to your Network will help you receive more quotes and</label>
          <div style="height: 5px"></div>
          <label>make Tender Management much easier</label>
        </div>
        <div class="row" style="margin-top: 30px">
          <div class="col-md-12">
            <div class="col-md-4" style="background-color: #ffffff; height: 450px; z-index: 1000; border-style: groove;">
              <div style="height: 30px"></div>
              <div class="text-center">
                <strong style="color: #525e64">NETWORK</strong>
                <div style="height: 30px"></div>
                <div class="profile-userpic">
                  <img src="/img/logos/IMAGE_1_256P.png" class="img-responsive" alt="" style="width: 150px !important; height: 140px !important;">
                </div>
                <div style="height: 30px"></div>
                <strong style="color: #525e64">INVITES SUBCONTRACTORS</strong>
                <p style="color: #95a5a6">Inviting Subcontractors to your Network will help you
                  receive more quotes and make Tender Management much easier
                </p>
                <div style="height: 30px"></div>
                <button class="btn btn-info invited" type="button" style="width: 150px">
                  INVITE
                </button>
              </div>
            </div>
            <div class="col-md-4" style="background-color: #ffffff; height: 450px; z-index: 1000;border-style: groove;">
              <div style="height: 30px"></div>
              <div class="text-center">
                <strong style="color: #525e64">POST</strong>
                <div style="height: 30px"></div>
                <div class="profile-userpic">
                  <img src="/img/logos/IMAGE_2_256P.png" class="img-responsive" alt="" style="width: 150px !important; height: 140px !important;">
                </div>
                <div style="height: 30px"></div>
                <strong style="color: #525e64">POST YOUR TENDER</strong>
                <p style="color: #95a5a6">Inviting Subcontractors to your Network will help you
                  receive more quotes and make Tender Management much easier
                </p>
                <div style="height: 30px"></div>
                <button class="btn btn-info post_tender" type="button" style="width: 150px">
                  POST TENDER

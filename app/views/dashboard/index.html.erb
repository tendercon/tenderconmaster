                <div style="height: 30px"></div>
                <button class="btn btn-info manage_tender" type="button" style="width: 150px">
                  MANAGE
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row four_divs" style="display: none">
      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="dashboard-stat blue">
          <div class="visual">
            <i class="fa fa-comments"></i>
          </div>
          <div class="details">
            <div class="number">
              <span data-counter="counterup" data-value="1349">0</span>
